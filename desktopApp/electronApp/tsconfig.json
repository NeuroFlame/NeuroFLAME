{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "es2020"],
    "outDir": "./build",
    "rootDir": "./src",
    "types": ["node", "electron"],
    "sourceMap": true,
    "strict": true,
    "resolveJsonModule": true,
    "paths": {
      "edgeFederatedClient": ["../../edgeFederatedClient/dist"]
    }
  },
  // "include": ["src/**/*"],
  "exclude": [
    "src/preload.js",
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
